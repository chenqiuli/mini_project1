<!--pages/mine/mine.wxml-->
<view class="info">
  <image src="{{avatarUrl}}" mode="aspectFit" bindtap="handleChange"></image>
  <view>{{nickName}}</view>
</view>


<view class="setting">
  <mp-cells>
    <mp-cell value="完善信息">
      <mp-icon slot="title" type="field" icon="me" color="#13C045" size="{{25}}"></mp-icon>
      <mp-icon slot="footer" type="field" icon="arrow" color="black" size="{{10}}"></mp-icon>
    </mp-cell>
    <mp-cell value="个性设置">
      <mp-icon slot="title" type="field" icon="like" color="#13C045" size="{{25}}"></mp-icon>
      <mp-icon slot="footer" type="field" icon="arrow" color="black" size="{{10}}"></mp-icon>
    </mp-cell>
  </mp-cells>
</view>